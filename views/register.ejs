<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head',{
        title : 'Register'
    })  %> 


<body class="register">
    <%- include('./partials/header')  %> 

    <main class="register__main">
        <section class="register__main__section general__main__section">
          <h1 class="form__title">Registrate</h1>
          <form action="" class="form" method="POST">
                <div class="form__box">
                    <label class="form__label" for="nombre">Nombre:</label>
                    <input class="form__input" type="text" id="nombre"  name="firstName" value="<%= locals.old && old.firstName ? old.firstName : null %>">
                    <p class="form__text--error"> <%= locals.errors && errors.firstName ? errors.firstName.msg : null %> </p>
                </div>
                <div class="form__box">
                    <label class="form__label" for="apellido">Apellido:</label>
                    <input class="form__input" min="0" step="0.1" max="10" type="text" id="apellido" name="lastName" value="<%=locals.old && old.lastName ? old.lastName : null%>">
                    <small class="form__text--error"><%= locals.errors && errors.lastname ? errors.lastname.msg : null %> </small>

                </div>
                <div class="form__box">
                    <label class="form__label" for="email">Email:</label>
                    <input class="form__input" type="email" id="email" name="email" value="<%=locals.old && old.email ? old.email : null%>">
                    <small class="form__text--error"><%= locals.errors && errors.email ? errors.email.msg : null %> </small>

                </div>
                <div class="form__box">
                    <label class="form__label" for="password">Contraseña:</label>
                    <input class="form__input" type="password" id="password" name="password">
                    <small class="form__text--error"><%= locals.errors && errors.password ? errors.password.msg : null %> </small>

                </div>
                <div class="form__box">
                    <label class="form__label" for="password2">Confirma contraseña:</label>
                    <input class="form__input" type="password" id="password2" name="password2" >
                    <small class="form__text--error"><%= locals.errors && errors.password2 ? errors.password2.msg : null %> </small>

                </div>
                <div class="form__box">
                    <div class="form__box--column ">
                        <div class="form__box--flex">
                            <input class="form__checkbox" type="checkbox" id="terminos" name="terms">
                            <label class="form__label--small" for="terminos">Acepto los <a href="/terms" target="_blank">términos y condiciones</a></label>
                        </div>
                        <div class="form__box--flex">
                            <a href="/terms"><small class="form__text--error"> <%= locals.errors && errors.terms ? errors.terms.msg : null %> </small></a> 
                        </div>
                    </div>
                </div>
                <div class="form__box form__box--flex ">
                    <a href="" class="form__button form__button--cancel">Cancelar</a>
                    <button  class="form__button form__button--send" type="submit">Registrate</button>
                </div>
          </form>
        </section>
    </main>
</body>

</html>